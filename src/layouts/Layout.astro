---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="style.css" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Alata&family=Josefin+Sans:wght@300&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body>
	<slot />
</body>
</html>
<style is:global>
	:root {
  		--clr-white: hsl(0, 0%, 100%);
  		--clr-black: hsl(0, 0%, 0%);
  		--clr-dark-grey: hsl(0, 0%, 55%);
  		--clr-very-dark-grey: hsl(0, 0%, 41%);
  		--mobile-screen-margin: 6.4vw;
  		--desktop-screen-margin: 11.39vw;
	}
	/* font size according to styleguide */
	body {
  		font-size: 15px;
	}
</style>

<!-- Typography -->
<style is:global>
	h1,
	h2,
	h3,
	nav {
	  font-family: 'Josefin Sans', sans-serif;
	  font-weight: 300;
	  text-transform: uppercase;
	}
	/* separate class for font Alata */
	.font-alata {
	  font-family: 'Alata', sans-serif;
	  font-weight: 400;
	}
</style>

<!-- undeline utility class -->
<style is:global>
	/* 
    CSS for underline action
   (to add underline behavior add this class in HTML per element)
*/
.underline {
  position: relative;
}

.underline::after {
  content: '';
  position: absolute;
  bottom: -10px;
  left: 50%;
  transform: translate(-50%, 0);
  width: 24px;
  height: 2px;
  background-color: var(--clr-white);
  display: none;
}

.underline:hover::after {
  display: block;
}
</style>


<!-- CSS basic reset -->
<style is:global>
	/* basic css reset */
	*,
	*::after,
	*::before {
	  box-sizing: border-box;
	  margin: 0;
	}

	a {
	  color: inherit;
	  text-decoration: none;
	}

	a:hover {
	  color: inherit;
	}

	img {
	  max-width: 100%;
	}

	ul {
	  list-style: none;
	}
</style>
