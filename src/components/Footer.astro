---
import Social from './Social.astro';
---

<footer id="footer" class="footer font-alata">
    <img
      src="images/logo.svg"
      alt="loopstudios logo"
      height="24"
      class="footer__logo"
    />
    <ul class="footer__list">
      <li class="footer__item">
        <a href="#footer" class="footer__link underline">About</a>
      </li>
      <li class="footer__item">
        <a href="#footer" class="footer__link underline">Careers</a>
      </li>
      <li class="footer__item">
        <a href="#footer" class="footer__link underline">Events</a>
      </li>
      <li class="footer__item">
        <a href="#footer" class="footer__link underline">Products</a>
      </li>
      <li class="footer__item">
        <a href="#footer" class="footer__link underline">Support</a>
      </li>
    </ul>
    <Social />
    <p class="footer__copyright">Â© 2021 Loopstudios. All rights reserved.</p>
  </footer>

<style>
    /* CSS for footer elements */
    footer {
      line-height: 25px;
      background-color: var(--clr-black);
      color: var(--clr-white);
      padding: 56px 51px;
      display: grid;
      grid-template-rows: auto auto auto auto;
      justify-items: center;
    }

    .footer__logo {
      height: 24px;
    }

    .footer__list {
      margin: 32px 0px;
      padding: 0px 0px;
      display: flex;
      flex-direction: column;
      align-items: center;
      row-gap: 24px;
    }

    .footer__copyright {
      color: var(--clr-dark-grey);
    }

    @media screen and (min-width: 1000px) {
        /* CSS for footer */
        footer {
        grid-template-columns: auto auto;
        grid-template-rows: auto auto;
        justify-items: flex-end;
        padding: 42px var(--desktop-screen-margin);
      }

      .footer__logo {
        justify-self: flex-start;
      }

      .footer__list {
        margin: 0px;
        width: 380px;
        grid-column: 1 / 1;
        grid-row: 2 / 2;
        flex-direction: row;
        justify-self: flex-start;
        justify-content: space-between;
      }
    }

  </style>